<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Command.
    -->
    <changeSet id="20231012082900-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="command_id"
                                 baseTableName="rel_command__plants"
                                 constraintName="fk_rel_command__plants__command_id"
                                 referencedColumnNames="id"
                                 referencedTableName="command"/>

        <addForeignKeyConstraint baseColumnNames="plants_id"
                                 baseTableName="rel_command__plants"
                                 constraintName="fk_rel_command__plants__plants_id"
                                 referencedColumnNames="id"
                                 referencedTableName="plants"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="command"
                                 constraintName="fk_command__customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>
    </changeSet>
</databaseChangeLog>
